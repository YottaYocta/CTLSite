---
interface Props {
  name: string;
  link: string;
  shortenedLink: string;
}

const { name = "", link, shortenedLink = link } = Astro.props;
---

<a href={link} target="_blank">
  <ul
    class="w-full flex justify-between gap-1 border-b border-neutral-200 hover:bg-white py-2 px-8"
  >
    <p>{name}</p>
    <p class="hover:underline kode-mono text-sm text-neutral-500">
      {shortenedLink}
    </p>
  </ul>
</a>
